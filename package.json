{
  "name": "react-native-form-progress",
  "version": "1.0.12",
  "description": "A react native component super useful in displaying progress when user is filling up forms like signup page, setting, information catering etc",
  "main": "lib/index.js",
  "types": "lib",
  "scripts": {
    "build": "npm run prettier:write && tsc -p .",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.tsx\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.tsx\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.tsx": [
      "npm run prettier:write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/irohitb/react-native-form-prorgress.git"
  },
  "keywords": [
    "form",
    "progress",
    "progress-bar",
    "progressbar",
    "react-native",
    "react"
  ],
  "author": "\"Rohit Bhatia <irohitbhatia@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "react-native-smart-statusbar": "^1.0.22"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-native": "^0.62.1"
  },
  "devDependencies": {
    "@types/react-native": "^0.63.48",
    "husky": "^5.1.0",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "typescript": "^4.1.3"
  },
  "bugs": {
    "url": "https://github.com/irohitb/react-native-form-prorgress/issues"
  },
  "homepage": "https://github.com/irohitb/react-native-form-prorgress#readme"
}
